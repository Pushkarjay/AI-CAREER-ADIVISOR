# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
VERTEX_AI_LOCATION=asia-south1

# Firestore Configuration
FIRESTORE_DATABASE=(default)

# BigQuery Configuration
BIGQUERY_DATASET=career_data
BIGQUERY_LOCATION=US

# Application Configuration
APP_NAME=AI Career Advisor
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_V1_STR=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","https://your-domain.com"]

# External Services
GEMINI_MODEL=gemini-1.5-flash
GEMINI_TEMPERATURE=0.7
GEMINI_API_KEY=your-gemini-api-key

# Firebase Admin (use a service account or GOOGLE_APPLICATION_CREDENTIALS pointing to JSON)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@example.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nABC...\n-----END PRIVATE KEY-----\n"

# Add your Firebase Hosting domains when deployed
# BACKEND_CORS_ORIGINS=["http://localhost:5173","https://<your-project>.web.app","https://<your-project>.firebaseapp.com"]

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8001